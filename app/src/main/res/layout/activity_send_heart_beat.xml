<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cesar.healthhub.SendHeartBeat">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Data"
        android:id="@+id/GenerateButton"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onGenrateData" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Xvalue"
        android:id="@+id/XvalueLabel"
        android:layout_below="@+id/GenerateButton"
        android:layout_alignLeft="@+id/GenerateButton"
        android:layout_alignStart="@+id/GenerateButton"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yvalue"
        android:id="@+id/YvalueLabel"
        android:layout_below="@+id/XvalueLabel"
        android:layout_alignLeft="@+id/XvalueLabel"
        android:layout_alignStart="@+id/XvalueLabel"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zvalue"
        android:id="@+id/ZvalueLabel"
        android:layout_below="@+id/YvalueLabel"
        android:layout_alignLeft="@+id/YvalueLabel"
        android:layout_alignStart="@+id/YvalueLabel"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Data"
        android:id="@+id/SendDataButton"
        android:layout_below="@+id/ZvalueLabel"
        android:layout_alignLeft="@+id/ZvalueLabel"
        android:layout_alignStart="@+id/ZvalueLabel"
        android:layout_marginTop="42dp" />

</RelativeLayout>
